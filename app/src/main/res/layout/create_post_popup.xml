<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/createHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/closeButton"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="X"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="CREATE POSTING"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/createBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/createHeader"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:backgroundTint="@color/grey">

        <LinearLayout
            android:id="@+id/postTitleFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="post title"
                android:textColor="@color/text_grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/postTitleInput"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/postDescFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postDescText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="description"
                android:textColor="@color/text_grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/postDescInput"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/createTagFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/editTagText"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="enter tag"
                android:textColor="@color/text_grey"
                android:textColorHint="@android:color/darker_gray"
                android:inputType="text"/>

            <Button
                android:id="@+id/addTagButton"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@android:color/darker_gray"
                android:text="+" />
        </LinearLayout>

        <Button
            android:id="@+id/postButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/blue"
            android:text="POST"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>