<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification"
    android:background="@color/grey">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@drawable/toolbar_gradient_bg"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:text="Learner Registration"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp">

                <!--FULL NAME FRAME-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:text="full name"
                            android:textColor="@color/text_grey"
                            android:textSize="16sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="25dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/regFullnameInput"
                                android:layout_width="320dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:textColor="@color/text_grey"
                                android:textSize="18sp" />
                        </FrameLayout>

                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginTop="83dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:text="email"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/regEmailInput"
                            android:layout_width="320dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:textColor="@color/text_grey"
                            android:textSize="18sp" />

                    </FrameLayout>
                </FrameLayout>

                <!--PASSWORD FRAME-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="168dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:text="password"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="30dp"
                        android:textColorHint="@android:color/darker_gray"
                        app:boxStrokeWidthFocused="2dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/regPasswordInput"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#FFFF"
                            android:drawablePadding="8dp"
                            android:inputType="textPassword"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                </FrameLayout>

                <!--CONFIRM PASSWORD-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="255dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:text="confirm password"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="30dp"
                        android:textColorHint="@android:color/darker_gray"
                        app:boxStrokeWidthFocused="2dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/regConfirmPasswordInput"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#FFFF"
                            android:drawablePadding="8dp"
                            android:inputType="textPassword"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="425dp">

                <!--BIRTHDATE FRAME-->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="45dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="birthdate"
                            android:textColor="@color/text_grey"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/regEditDate"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="MM/DD/YYYY"
                            android:textColor="@color/text_grey"
                            android:textColorHint="@android:color/darker_gray" />

                    </FrameLayout>
                </FrameLayout>

                <!--AGE FRAME-->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="220dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <!--age header-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="65dp"
                            android:text="age"
                            android:textColor="@color/text_grey"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/regAgeSpinner"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@android:color/darker_gray"
                            android:spinnerMode="dropdown"
                            android:textSize="12sp" />

                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="90dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:text="address"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/regAddressInput"
                            android:layout_width="320dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:textColor="@color/text_grey"
                            android:textSize="18sp" />

                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="180dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:text="parent's/guardian's name"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/regGuardianNameInput"
                            android:layout_width="320dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:textColor="@color/text_grey"
                            android:textSize="18sp" />

                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginTop="270dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:text="parent's/guardian's email"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/regGuardianEmailInput"
                            android:layout_width="320dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:textColor="@color/text_grey"
                            android:textSize="18sp" />

                    </FrameLayout>
                </FrameLayout>

            </FrameLayout>

            <!--interest onward-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="782dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:text="my interests"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="175dp"
                        android:text="(choose 5)*"
                        android:textSize="16sp"
                        android:textColor="@color/blue"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="TOPIC 1"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="10sp"
                                    android:backgroundTint="@color/white"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="TOPIC 2"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="10sp"
                                    android:backgroundTint="@color/white"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="TOPIC 3"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="10sp"
                                    android:backgroundTint="@color/white"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="45dp">

                                <EditText
                                    android:id="@+id/editTagText"
                                    android:layout_width="220dp"
                                    android:layout_height="wrap_content"
                                    android:hint="enter tag"
                                    android:textColor="@color/text_grey"
                                    android:textColorHint="@android:color/darker_gray"
                                    android:inputType="text"/>

                                <Button
                                    android:id="@+id/addTagButton"
                                    android:layout_width="65dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:backgroundTint="@android:color/darker_gray"
                                    android:text="+" />
                            </LinearLayout>
                        </FrameLayout>

                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="125dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:text="upload a"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="147dp"
                        android:text="valid government or school ID"
                        android:textSize="16sp"
                        android:textColor="@color/blue"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <Button
                            android:id="@+id/regIdButton"
                            android:layout_width="65dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="48dp"
                            android:backgroundTint="@android:color/darker_gray"
                            android:text="+" />
                        <EditText
                            android:id="@+id/idPathTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="120dp"
                            android:text="choose file..."
                            android:textColor="@color/text_grey"
                            android:editable="false"/>
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="210dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:text="upload a"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="148dp"
                        android:text="selfie"
                        android:textSize="16sp"
                        android:textColor="@color/blue"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">

                        <Button
                            android:id="@+id/regSelfieButton"
                            android:layout_width="65dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="48dp"
                            android:backgroundTint="@android:color/darker_gray"
                            android:text="+" />
                        <EditText
                            android:id="@+id/selfiePathTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="120dp"
                            android:text="choose file..."
                            android:textColor="@color/text_grey"
                            android:editable="false"/>
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="300dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:id="@+id/registerButton"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:backgroundTint="@color/yellow"
                        android:text="REGISTER"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="already have an account?"
                            android:layout_gravity="center_horizontal"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/loginHereButton"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:backgroundTint="@color/blue"
                            android:text="Login here!"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </FrameLayout>
                </FrameLayout>

            </FrameLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
